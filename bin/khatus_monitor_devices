#! /usr/bin/awk -f

BEGIN {
     FS = msg_fs ? msg_fs : "|"
    OFS = msg_fs ? msg_fs : "|"
    Kfs = key_fs ? key_fs : ":"
}

$1 == "OK" && \
$2 == "khatus_sensor_devices" \
{
    alert("low", "BlockDeviceEvent", $3 " " $4)
}

function alert(priority, subject, body) {
    # priority : "low" | "med" | "hi"
    # subject  : no spaces
    # body     : anything
    print("OK", "khatus_monitor_devices", "alert", priority, subject, body)
}
